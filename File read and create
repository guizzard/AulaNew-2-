
#include <stdio.h>

int main()
{
    FILE *ark;
    char c;

        ark = fopen("arquivo.txt", "w");
    
        ark = fopen("arquivo.txt", "r");
        
        if(ark){
            while ((c = getc(ark)) !=EOF){ //getc - get caracter e End of FILE
            printf("%c", c);
            }
        }else{
            printf("NÃ£o existe");
        }
        
        fclose(ark);
        
    return 0;
}
